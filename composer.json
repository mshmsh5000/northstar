{
  "name": "dosomething/northstar",
  "description": "The DoSomething.org user & activity API.",
  "license": "MIT",
  "type": "project",
  "require": {
    "laravel/framework": "5.3.*",
    "guzzlehttp/guzzle": "~6.2.1",
    "jenssegers/mongodb": "3.1.*",
    "league/flysystem-aws-s3-v3": "~1.0",
    "parse/php-sdk" : "1.1.*",
    "league/fractal": "0.13.*",
    "league/oauth2-server": "~6.0.0",
    "dosomething/stathat": "^2.0.0",
    "symfony/psr-http-message-bridge": "^1.0.0",
    "zendframework/zend-diactoros": "^1.3",
    "league/iso3166": "^1.0",
    "fideloper/proxy": "^3.3",
    "dosomething/gateway": "^1.2",
    "laravel/socialite": "~2.0.20"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "phpspec/phpspec": "~2.1",
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "^0.9.4",
    "symfony/dom-crawler": "3.1.*",
    "symfony/css-selector": "3.1.*"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "files": [
      "app/helpers.php"
    ],
    "psr-4": {
      "Northstar\\": "app/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "post-create-project-cmd": [
      "php -r \"copy('.env.example', '.env');\"",
      "php artisan key:generate"
    ]
  },
  "config": {
    "preferred-install": "dist"
  }
}
